<!DOCTYPE html>
<html>
  
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width,initial-scale=1,  maximum-scale=1">

    <script src="https://kit.fontawesome.com/9c3f34c97f.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="bg-dark text-white">
    <nav class="navbar navbar-expand-lg navbar-light">
    <div class="container">
     <a class="navbar-brand p-3 text-light" href="/">Bookers</a> 
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                        aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
       <span class="navbar-toggler-icon"></span>
          </button>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
          
    <% if user_signed_in? %>
      
      <li  class="nav-item mb-3 mr-3">
        <i class="fa-solid fa-house me-1"></i> <%= link_to "Home", user_path(current_user) , class: "text-light" %>
      </li>
    
      <li class="nav-item mb-3 mr-3">
      <i class="fa-solid fa-users me-1"></i> <%= link_to 'Users', users_path , class: "text-light" %>
      </li>
      
      <li class="nav-item mb-3 mr-3">
        <i class="fa-solid fa-book me-1"></i> <%= link_to "Books", books_path , class: "text-light" %>
      </li>
    
      <li class="nav-item mb-3 mr-3">
        <i class="fa-solid fa-right-to-bracket me-1"></i> <%= link_to "log out", destroy_user_session_path, method: :delete , class: "text-light" %>
      </li>
      
    <% else %>
    

      <li class="nav-item mb-3 mr-3">
        <i class="fa-solid fa-house me-1"></i> <%= link_to "Home",root_path , class: "text-light" %>
       </li>
      <li class="nav-item mb-3 mr-3">
        <i class="fa-solid fa-link mb-1"></i> <%= link_to "About", about_path , class: "text-light" %>
      </li>
      <li class="nav-item mb-3 mr-3">
        <i class="fa-solid fa-user-plus me-1"></i> <%= link_to "Sign up", new_user_registration_path , class: "text-light" %>
       </li>
       <li class="nav-item mb-3 mr-3">
        <i class="fa-solid fa-right-to-bracket me-1"></i> <%= link_to "Log in", new_user_session_path , class: "text-light" %>
       </li>

    <% end %>
      </ul>
    </div>
  </div>
 </nav>
  </header>
   <main class="mb-auto">
    <%= yield %>
    </main>
    
    <footer>
      <div class="container mt-5">
        <div class="row">
          <div class="mx-auto">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>

  </body>

</html>

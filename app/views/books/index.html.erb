
<%= render 'books/list', book: @book, user: @user %>


<div class = "container">
 <div class ="row">
  <div class="col-md-8 offset-md-1">
      
   <h1>Books</h1>
   
<% @books.each do |book| %>
  <div>
    <%= image_tag book.get_image %>
     <p>Title : <%= link_to book.title, book_path(book) %></p>
    <p>Opinion：<%= book.body %></p>
    <p>ユーザーネーム：<%= book.user.name %></p>
  </div>
<% end %>
   
  </div>
 </div>
</div>

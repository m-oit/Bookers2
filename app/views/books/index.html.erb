<% @books.each do |book| %>
<div>
  <%= link_to book_path(book.id) do %>
   <%= image_tag book.get_image %>
  <% end %>
    <p>投稿ユーザー画像：<%= image_tag 'profile.jpg' %></p>
    <p>Title：<%= book.title %></p>
    <p>body：<%= book.body %></p>
    <P>ユーザーネーム:<%= book.user.name %></P>
    <%= puts @books.inspect %>
</div>

<% end %>
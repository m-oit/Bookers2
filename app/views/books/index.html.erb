<% if @book.errors.any? %> 
  <%= @book.errors.count %>errors prohibited this obj from being saved: 
  <ul>
    <% @book.errors.full_messages.each do |message| %> 
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-md-3">
        <%= render 'books/list', book: @book, user: @user %>
    </div>

    <div class="col-md-8 offset-md-1">
     <h1>Books</h1>
     <table class="table table-striped">
      <thead>
       <tr>
         <th></th>
         <th>Title</th>
         <th>Opinion</th>
       </tr>
      </thead>
     <tbody>
     <% @books.each do |book| %>
     <tr>
     <td><%= image_tag book.user.profile_image, width: 100, height: 100 %></td>
     <td><%= link_to book.title, book_path(book) %></td>
     <td><%= book.body %></td>
     </tr>
     <% end %>
     
     </tbody>
    </table>
     <%= paginate @books %>
  </div>
 </div>
</div>

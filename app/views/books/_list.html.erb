<h1>User info</h1>
   <div>
     
    <p><%= image_tag user.get_profile_image(100, 100) %></p>
    <h3><%= user.name %></h3>
    <h3><%= user.introduction %></h3>
      <% if user == current_user %>
      <p><%= link_to "<i class='fa-solid fa-gears'></i>".html_safe, edit_user_path(@user), class: "btn btn-outline-secondary btn-block" %></p>
     <% end %>
  </div>


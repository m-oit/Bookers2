<h1>User info</h1>
<% if @user.present? && @user.profile_image.attached? %>
<p><%= image_tag @user.profile_image, width: 100, height: 100 %></p>
<% else %>
<p><%= image_tag 'profile.jpeg', width: 100, height: 100 %></p>
<% end %>
<table class="table table-striped">
  <tbody>
      <th>Name</th>
      <td><%= @user.name %></td>
    </tr>
    <tr>
      <th>Introduction</th>
      <td><%= @user.introduction %></td>
    </tr>
    <tr>
    </tr>
  </tbody>
</table>
<p><%= link_to "<i class='fa-solid fa-user-gear'></i>".html_safe, edit_user_path(@user), class: "btn btn-outline-secondary btn-block" %></p>
  
  

<%= render 'books/list', book: @book, user: @user %>

<div>
    <p>Title：<%= @book.title %></p>
    <p>body：<%= @book.body %></p>
    <p>投稿ユーザー画像：<%= image_tag @book.user.get_profile_image(100, 100) %></p>
    <p>ユーザーネーム：<%= link_to @book.user.name, user_path(@book.user) %>
    <p>投稿日：<%= @book.created_at.strftime('%Y/%m/%d') %></p>
    <% if @book.user == current_user %>
     <%= link_to "Edit", edit_book_path(@book) %>
    <%= link_to "Destroy", book_path(@book), method: :delete,  "data-confirm" => "本当に消しますか？" %>
    <% end %>
</div>





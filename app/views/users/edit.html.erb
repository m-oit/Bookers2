<div class = "container">
  <div class ="row">
    <div class = "col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

<h1>User info</h1>

<% if @user.errors.any? %>
 <h4><%= @user.errors.count %> error prohibited this obj from being saved:</h4>
  <ul>
   <% @user.errors.full_messages.each do |message| %>
    <li><%= message %></li>
   <% end %>
  </ul>
<% end %>

<%= form_with model: @user do |f| %>
 <div class="form-group">
  <label for="inputName">Name</label>
  <%= f.text_field :name, autofocus: true, id: "inputName", class: "form-control" %>
 </div>

 <div>
  <label for="inputImage">Image</label>
 </div>
 <div>
  <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
 </div>
 
 <div class = "form-group mt-3">
  <label for="inputIntroduction">introduction</label>
  <%= f.text_area :introduction, id: 'inputIntroduction' , class: "form-control"%>
 </div>
 
  <%= f.submit "Update User" , class: "btn btn-secondary" %>
  <% end %>
  </div>
 </div>
</div>
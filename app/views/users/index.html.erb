<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'books/list', book: @book, user: @user %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h1>Users</h1>
      
      <% @books.each do |book| %>
      <div>
        <%= image_tag book.user.profile_image, width: 100, height: 100 %>
        <p>ユーザーネーム：<%= book.user.name %></p>
        <%= link_to 'Show', user_path(book.user) %>
      </div>
      <% end %>
      
    </div>
  </div>
</div>
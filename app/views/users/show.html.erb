<%= render 'books/list', book: @book, user: @user %>



<% @books.each do |book| %>
<div>
  <% if book.user.present? %>
      <p><%= image_tag book.user.get_profile_image(100, 100) %></p>
    <% else %>
      <p>ユーザー画像がありません。</p>
    <% end %>
　<%= link_to book.title, book_path(book.id) %>
  <p><%= book.body %></p>
  <p>ユーザーネーム：<%= book.user.name %></p>
<% end %>

<%= paginate @books %>


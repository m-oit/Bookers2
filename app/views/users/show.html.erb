<div>
  <%= flash[:notice] %>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'books/list', book: @book, user: @user %>
    </div>
    
<div class="col-md-8 offset-md-1">
  　<table class="table table-striped">
   <thead>
     <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
     </tr>
   </thead>
    <tbody>
<% @books.each do |book| %>
  <tr>
    <% if book.user.present? %>
      <th><%= image_tag book.user.get_profile_image(100, 100) %></th>
      <th><%= link_to book.title, book_path(book.id) %></th>
      <th><%= book.body %></th>
    <% else %>
      <th>ユーザー画像がありません。</th>
    <% end %>
  </tr>
<% end %>
<%= paginate @books %>
    </tbody>
   </table>
</div>




